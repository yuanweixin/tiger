let
    function printint(i: int) =
        let function f(i:int) = if i>0
                then (f(i/10); print(chr(i-i/10*10+ord("0"))))
        in (if i<0 then (print("-"); f(-i))
            else if i>0 then f(i)
            else print("0");
            print("\n"))
        end

    function ints(a:int, b:int, c:int, d:int, e:int, f:int, g:int) : int =
        a+b+c+d+e+f+g

in
    if ints(1,2,3,4,5,6,7)=28 then
        0
    else
        (printint(ints(1,2,3,4,5,6,7));
        1)
end